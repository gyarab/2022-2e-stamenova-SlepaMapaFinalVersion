<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.rp_slepamapa.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="cityNameLabel" />
   <Label fx:id="pointsLabel" />
   <Label fx:id="currentStatusLabel" />
    <Button fx:id="nextButton" onAction="#onNextButtonClick" text="Next question" />
   <Label fx:id="timeCounterLabel" />
   <StackPane fx:id="stackPane">
      <children>
         <ImageView fx:id="imageView" pickOnBounds="true" preserveRatio="true">
          </ImageView>
         <Canvas fx:id="canvas" onMouseClicked="#onClick" />
      </children>
   </StackPane>
</VBox>
